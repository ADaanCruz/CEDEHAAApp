<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="2dp">

    <ImageView
        android:id="@+id/imagen_de_notificacion"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_nombre_del_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/titulo_del_curso"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/texto_tipo_y_nombre_de_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/tipo_y_nombre_de_usuario"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/texto_mensaje_de_notificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/mensaje_de_la_notificacion"
            android:textSize="14sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/texto_fecha_notificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/fecha_de_publicacion"
            android:textSize="12sp"
            android:textStyle="italic"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>